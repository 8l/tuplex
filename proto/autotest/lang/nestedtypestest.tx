## Similar to sequence interface test but without generics

interface Sequenceable derives Interface {
    abstract sequencer() mod ->Ref<~Sequencer>;
}

interface Sequencer derives Sequenceable {
    override sequencer() mod ->Ref<~Sequencer> { return self; }

    abstract emptyFunc();
    abstract hasNext()->Bool;
    abstract next()->Int;
}

type SingleRef derives Tuple : Sequenceable {

    type ~ SingleSeq derives Tuple : Sequencer {
        element : Int;
        done : ~Bool;

        self( element : Int ) {
            self.element = element;
            self.done = FALSE;
        }
        override emptyFunc() {
        }
        override hasNext()->Bool {
            return !self.done;
        }
        override next() ~ ->Int {
            if self.done:
                tx.c.puts( c"Panic: No next element" );
            self.done = TRUE;
            return self.element;
        }
    }

    element : Int;
    
    self( element : Int ) {
        self.element = element;
    }

    override sequencer()->Ref<~Sequencer> {
        el : Int = self.element;
        seq := new ~SingleSeq( el );
        seq.emptyFunc();
        return seq;
    }
}


main()->Int {
    myint : Int = 5;
    singleton := new SingleRef( myint );
    seq := singleton.sequencer();
    seq.emptyFunc();
    hn := seq.hasNext();
    elem := seq.next();
    assert 5 == elem;
    assert !seq.hasNext();

    return 0;
}
